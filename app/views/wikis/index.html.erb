 <div class="row">
<% @wiki.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <!--<h4 class="media-heading">-->
      <div class="col-md-3">
      <h4 class="wiki-title">
          <% if wiki.private != true %>
         <%= link_to wiki.title, wiki %>
         <% end %>
      </h4>
    </div>
  </div>
  </div>
<% end %>

   <div class="col-md-3">
 <% if current_user && current_user.role == 'premium' %>
    <div>
    <h2>Your Private Chomps</h2>
      <% if @user.wikis.count >= 1 %>
        <% @user.wikis.each do |wiki| %>
            <% if @wiki.private %>
              <p><%= link_to wiki.title, wiki %></p>
            <% end %>
        <% end %>
      <% else %>
        <p>Feel free to take the bait and make a Chomp!</p>
      <% end %>
    </div>
  <% end %>
