<div class = "row">
    <div class="col-md-4">
        <%= form_for [@wiki, Collaborator.new] do |collab| %>
            <div class="form-group">
              <h4>Add Collaborators</h4>
              <p><strong>Enter the email of the person you want to collab with!</strong></p>
              <%= collab.label :user, class: 'sr-only' %>
              <%= collab.text_field :user, class: 'form-control', placeholder: "Collaborator's email" %>
            </div>
            <div class="form-group">
              <%= collab.submit "Add 'em!", class:'btn btn-success' %>
            </div>
      <% end %>
   </div>